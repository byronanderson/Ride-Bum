<h1>Listing invitations</h1>

<table>
  <tr>
    <th>Invitee name</th>
    <th>Invitee email</th>
    <th>Invitee phone</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |invitation| %>
  <tr>
    <td><%= invitation.user.username %></td>
    <td><%= invitation.user.email %></td>
    <td><%= invitation.user.phone %></td>
    <td><%= invitation.event_id %></td>
    <td><%= link_to 'Show', invitation %></td>
    <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
    <td><%= link_to 'Destroy', invitation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

